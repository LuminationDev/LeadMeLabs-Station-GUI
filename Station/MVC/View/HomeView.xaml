                                    2.22062C17.7441 2.25888 20.2118 3.45735 20.2118 4.69407C20.2118 5.93079 17.874 7.12872 14.1581 7.16751Z"/>
                                </Viewbox>
                                
                                <!-- Right Controller Battery Icon -->
                                <Image Grid.Column="1" VerticalAlignment="Bottom" Margin="-10,0,0,0" Width="20" Height="20">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RightBatteryIndex}" Value="0">
                                                    <Setter Property="Source" Value="../../Assets/Images/vr_battery_off.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RightBatteryIndex}" Value="1">
                                                    <Setter Property="Source" Value="../../Assets/Images/vr_battery_low.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RightBatteryIndex}" Value="2">
                                                    <Setter Property="Source" Value="../../Assets/Images/vr_battery_med.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RightBatteryIndex}" Value="3">
                                                    <Setter Property="Source" Value="../../Assets/Images/vr_battery_full.png"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                            <Setter Property="Source" Value="../../Assets/Images/vr_battery_off.png"/>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </Grid>
                        
                            <!--Base station Icon-->
                            <Viewbox Grid.Column="3" Width="56" Height="60" Margin="10,0,0,0">
                                <Canvas Width="28" Height="30">
                                    <Rectangle Width="26.5356" Height="28.948" RadiusX="4" RadiusY="4" Canvas.Left="0.671875" Canvas.Top="0.499023" Fill="{Binding BaseStationColor}"/>
                                    <Ellipse Width="4.82466" Height="4.82466" Canvas.Left="11.53195" Canvas.Top="5.73557" Fill="#DEE1EB"/>
                                </Canvas>
                            </Viewbox>
                        </Grid>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </Grid>
        
        <Grid DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Margin="0, 0, 0, 50">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        
            <TextBlock Grid.Row="0" 
                       FontFamily="../../Fonts/#Poppins"
                       Text="Software Details"
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Left"/>
            
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal">
                
                <!--Current Status-->
                <Border Width="200" Height="100">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#54a0ff" Offset="0.0"/>
                            <GradientStop Color="#5f27cd" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    
                    <Border.Clip>
                        <RectangleGeometry RadiusX="10" 
                                           RadiusY="10" 
                                           Rect="0,0,200,100"/>
                    </Border.Clip>
                        
                    <StackPanel>
                        <TextBlock Text="Current State" 
                                   Margin="10"
                                   Foreground="White"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   FontFamily="../../Fonts/#Poppins"/>
                        
                        <TextBlock Text="{Binding CurrentState}" 
                                   Margin="10, 0, 0, 0"
                                   Foreground="GhostWhite"
                                   FontSize="18"
                                   FontFamily="../../Fonts/#Poppins"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
                
                <!--IP & MAC Address-->
                <Border Width="200" Height="100" Margin="25, 0, 0, 0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#54a0ff" Offset="0.0"/>
                            <GradientStop Color="#5f27cd" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    
                    <Border.Clip>
                        <RectangleGeometry RadiusX="10" 
                                           RadiusY="10" 
                                           Rect="0,0,200,100"/>
                    </Border.Clip>
                        
                    <StackPanel>
                        <TextBlock Text="IP Address"
                                   Margin="10"
                                   Foreground="White"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   FontFamily="../../Fonts/#Poppins"/>
                        
                        <TextBlock Text="{Binding IpAddress}"
                                   Margin="10, 0, 0, 0"
                                   Foreground="GhostWhite"
                                   FontSize="18"
                                   FontFamily="../../Fonts/#Poppins"/>
                    </StackPanel>
                </Border>
                
                <!--System Up Time-->
                <Border Width="200" Height="100" Margin="25, 0, 0, 0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#54a0ff" Offset="0.0"/>
                            <GradientStop Color="#5f27cd" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    
                    <Border.Clip>
                        <RectangleGeometry RadiusX="10" 
                                           RadiusY="10" 
                                           Rect="0,0,200,100"/>
                    </Border.Clip>
                        
                    <StackPanel>
                        <TextBlock Text="Mac Address"
                                   Margin="10"
                                   Foreground="White"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   FontFamily="../../Fonts/#Poppins"/>
                        
                        <TextBlock Text="{Binding MacAddress}"
                                   Margin="10, 0, 0, 0"
                                   Foreground="GhostWhite"
                                   FontSize="18"
                                   FontFamily="../../Fonts/#Poppins"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
