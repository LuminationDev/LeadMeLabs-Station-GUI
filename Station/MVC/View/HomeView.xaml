                                    13.0617 4.36462 12.2626 4.36462 12.2626C4.36462 12.2626 5.10726 11.5368 6.04932 10.6091C8.61894 12.0533 9.0813 15.4123 9.0813 15.4123C9.0813 15.4123 9.79004 21.8733 
                                    10.1209 26.1314C10.4351 30.1706 13.8105 30.0181 14.1581 29.9926C14.5062 30.0186 17.881 30.1706 18.1952 26.1314C18.5261 21.8728 19.3873 15.4123 19.3873 15.4123C19.3873 
                                    15.4123 19.6972 12.0538 22.2674 10.6091C23.2094 11.5368 23.9521 12.2626 23.9521 12.2626C23.9521 12.2626 24.802 13.0617 25.6368 12.4002C26.2609 11.9056 27.322 10.8843 
                                    27.322 10.8843C27.322 10.8843 28.6198 9.65219 26.7605 7.57787ZM14.1581 7.16751C10.4427 7.12926 7.84458 5.93079 7.84458 4.69407C7.84458 3.45735 10.3128 2.25941 14.0282 
                                    2.22062C17.7441 2.25888 20.2118 3.45735 20.2118 4.69407C20.2118 5.93079 17.874 7.12872 14.1581 7.16751Z"/>
                                </Viewbox>
                                
                                <!--Left Controller Battery Icon-->
                                <Image Grid.Column="1" VerticalAlignment="Bottom" Margin="-10,0,0,0" Width="20" Height="20">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding LeftBatteryIndex}" Value="0">
                                                    <Setter Property="Source" Value="../../Assets/Images/vr_battery_off.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding LeftBatteryIndex}" Value="1">
                                                    <Setter Property="Source" Value="../../Assets/Images/vr_battery_low.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding LeftBatteryIndex}" Value="2">
                                                    <Setter Property="Source" Value="../../Assets/Images/vr_battery_med.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding LeftBatteryIndex}" Value="3">
                                                    <Setter Property="Source" Value="../../Assets/Images/vr_battery_full.png"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                            <Setter Property="Source" Value="../../Assets/Images/vr_battery_off.png"/>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </Grid>
                            
                            <Grid Grid.Column="2" Width="60">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                            
                                <!--Right Controller Icon-->
                                <Viewbox Grid.Column="0" Width="56" Height="60">
                                    <Path Fill="{Binding RightControllerColor}" Data="M26.7605 7.57787C25.1771 5.81065 21.7058 2.48026 21.7058 2.48026C21.7058 2.48026 19.1157 0 14.1586 0C9.20153 0 6.61142 2.47973 6.61142
