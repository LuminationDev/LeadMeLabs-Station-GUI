<UserControl x:Class="Station.MVC.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="560" d:DesignWidth="700">
    
    <DockPanel Margin="10, 0, 0, 0">
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition />
            </Grid.RowDefinitions>
        
            <TextBlock Grid.Row="0" 
                       Text="Software Status"
                       FontFamily="../../Fonts/#Poppins"
                       Foreground="White"
                       FontSize="28"
                       HorizontalAlignment="Left"/>
            
            <StackPanel Grid.Row="1" Orientation="Horizontal">

                <!--Software details-->
                <Border Width="300" Height="250">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#ffc138" Offset="0.0"/>
                            <GradientStop Color="#ed3738" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    
                    <Border.Clip>
                        <RectangleGeometry RadiusX="10" 
                                           RadiusY="10" 
                                           Rect="0,0,300,250"/>
                    </Border.Clip>
                    
                    <StackPanel>
                        <!--Version Name & Number-->
                        <TextBlock Text="Details"
                                   Margin="10"
                                   Foreground="White"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   FontFamily="../../Fonts/#Poppins"/>

                        <TextBlock Text="Version"
                                   Margin="20, 0, 0, 5"
                                   Foreground="GhostWhite"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   FontFamily="../../Fonts/#Poppins"/>
                        
                        <TextBlock Text="{Binding VersionNumber, FallbackValue=1.0.0}"
                                   Margin="40, 0, 0, 5"
                                   Foreground="GhostWhite"
                                   FontSize="18"
                                   FontFamily="../../Fonts/#Poppins"/>

                        <TextBlock Text="{Binding VersionName, FallbackValue=Unknown}"
                                   Margin="40, 0, 0, 20"
                                   Foreground="GhostWhite"
                                   FontSize="18"
                                   FontFamily="../../Fonts/#Poppins"/>
                        
                        <!--Process details-->
                        <TextBlock Text="Process"
                                   Margin="20, 0, 0, 5"
                                   Foreground="GhostWhite"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   FontFamily="../../Fonts/#Poppins"/>
                        
                        <TextBlock Text="{Binding ProcessName, FallbackValue=Unknown}"
                                   Margin="40, 0, 0, 5"
                                   Foreground="GhostWhite"
                                   FontSize="18"
                                   FontFamily="../../Fonts/#Poppins"/>
                        
                        <TextBlock Text="{Binding ProcessStatus, FallbackValue=Unknown}"
                                   Margin="40, 0, 0, 0"
                                   Foreground="GhostWhite"
                                   FontSize="18"
                                   FontFamily="../../Fonts/#Poppins"/>
                    </StackPanel>
                </Border>
                
                <!--VR Status-->
                <Border Margin="50, 0, 0, 0" Width="300" Height="250">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#d08fff" Offset="0.0"/>
                            <GradientStop Color="#ee5253" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    
                    <Border.Clip>
                        <RectangleGeometry RadiusX="10" 
                                           RadiusY="10" 
                                           Rect="0,0,300,250"/>
                    </Border.Clip>
                    
                    <StackPanel>
                        <TextBlock Text="VR Status"
                                   Margin="10"
                                   Foreground="White"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   FontFamily="../../Fonts/#Poppins"/>
                        
                        <TextBlock Text="Headset:"
                                   Margin="20, 0, 0, 5"
                                   Foreground="White"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   FontFamily="../../Fonts/#Poppins"/>
                        
                        <TextBlock Text="{Binding HeadsetDescription, FallbackValue=Unknown}"
                                   Margin="40,0,0,5"
                                   Foreground="White"
                                   FontSize="18"
                                   FontFamily="../../Fonts/#Poppins"/>
                        
                        <!--Third party headset connection-->
                        <DockPanel Margin="0,0,0,5">
                            <TextBlock Text="Third Party:"
                                       Margin="40,0,0,0"
                                       Foreground="White"
                                       FontSize="18"
                                       FontFamily="../../Fonts/#Poppins"/>
                            
                            <TextBlock DockPanel.Dock="Right" 
                                       Text="{Binding ThirdPartyConnection, FallbackValue=Off}"
                                       Margin="0,0,20,0"
                                       HorizontalAlignment="Right"
                                       Foreground="White"
                                       FontSize="18"
                                       FontFamily="../../Fonts/#Poppins"/>
                        </DockPanel>
                        
                        <!--OpenVR headset connection-->
                        <DockPanel Margin="0,0,0,5">
                            <TextBlock Text="OpenVR:"
                                       Margin="40,0,0,0"
                                       Foreground="White"
                                       FontSize="18"
                                       FontFamily="../../Fonts/#Poppins"/>
                            
                            <TextBlock DockPanel.Dock="Right"
                                       Text="{Binding OpenVrConnection, FallbackValue=Off}"
                                       Margin="0,0,20,0"
                                       HorizontalAlignment="Right"
                                       Foreground="White"
                                       FontSize="18"
                                       FontFamily="../../Fonts/#Poppins"/>
                        </DockPanel>
                        
                        <Grid HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
